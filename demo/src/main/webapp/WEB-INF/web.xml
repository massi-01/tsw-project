<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app
  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
>
  <display-name>Archetype Created Web Application</display-name>

  <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <!-- Redirect Servlet -->
  <servlet>
    <servlet-name>redir</servlet-name>
    <servlet-class>demo.controllers.RedirectWithData</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>redir</servlet-name>
    <url-pattern>/travel</url-pattern>
  </servlet-mapping>


  <!-- Login Servlet -->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>demo.controllers.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Logout Servlet -->
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>demo.controllers.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

</web-app>
